<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@drawable/blue_bkg"
        android:gravity="center"
        android:text="@string/sb1"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机防盗卫士"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <com.cool.baigu.safeaide.views.Set1_item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            gcc:tt="sim卡变更报警" />

        <com.cool.baigu.safeaide.views.Set1_item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            gcc:tt="GPS追踪" />

        <com.cool.baigu.safeaide.views.Set1_item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            gcc:tt="远程锁屏" />

        <com.cool.baigu.safeaide.views.Set1_item
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            gcc:tt="远程清除数据" />

    </LinearLayout>

    <com.cool.baigu.safeaide.views.Buttom_item
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        gcc:tt1="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/p11"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/dg_btn_confirm_normal"
            android:src="@drawable/next"
            android:layout_alignParentRight="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/p11"
            android:layout_marginBottom="30sp"
            android:src="@drawable/step_1" />



    </RelativeLayout>


</LinearLayout>