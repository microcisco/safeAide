<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55sp"
        android:background="@drawable/blue_bkg"
        android:gravity="center"
        android:text="@string/sb2"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通过绑定sim卡:"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="下次重启手机，如果发现sim卡不一致，就会给安全号码发送报警短信"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_bind_sim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击绑定/解绑sim卡"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="#FFF"
        android:background="@drawable/dg_btn_confirm_normal"
        android:drawableRight="@drawable/unlock"
        android:paddingRight="6sp"
        />

    <com.cool.baigu.safeaide.views.Buttom_item
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        gcc:tt1="2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/p11"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/dg_btn_confirm_normal"
            android:src="@drawable/next"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/p10"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:background="@drawable/dg_btn_confirm_normal"
            android:src="@drawable/pre"
            android:layout_below="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/p11"
            android:layout_marginBottom="30sp"
            android:src="@drawable/step_2"
            android:id="@+id/imageView" />

    </RelativeLayout>


</LinearLayout>